        "type": "checkbox",
        "id": "enable_wishlist",
        "label": "Enable Wishlist",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_card_search",
        "label": "Enable Advanced Card Search",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_deck_builder",
        "label": "Enable Deck Builder",
        "default": true
      },

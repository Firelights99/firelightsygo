# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=firelight_duel_academy
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Server Configuration
PORT=3001
NODE_ENV=production
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
FRONTEND_URL=https://firelights99.github.io
ALLOWED_ORIGINS=https://firelights99.github.io,http://localhost:3000,http://127.0.0.1:5500

# Payment Configuration (Square)
SQUARE_APPLICATION_ID=your_square_app_id
SQUARE_ACCESS_TOKEN=your_square_access_token
SQUARE_ENVIRONMENT=production
SQUARE_WEBHOOK_SIGNATURE_KEY=your_webhook_signature_key
SQUARE_LOCATION_ID=your_square_location_id
SQUARE_ONLINE_STORE_ID=your_store_id_here
SQUARE_ONLINE_STORE_URL=https://your-store.square.site

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@firelightduelacademy.com
FROM_NAME=Firelight Duel Academy

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External APIs
YGOPRODECK_API_URL=https://db.ygoprodeck.com/api/v7
TCGPLAYER_API_URL=https://api.tcgplayer.com
TCGPLAYER_API_KEY=your_tcgplayer_api_key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Business Configuration
STORE_NAME=Firelight Duel Academy
STORE_EMAIL=info@firelightduelacademy.com
STORE_PHONE=647-555-DUEL
STORE_ADDRESS=1247 Queen Street West, Toronto, Ontario
TAX_RATE=0.13
FREE_SHIPPING_THRESHOLD=75.00
CURRENCY=CAD

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
